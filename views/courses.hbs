<h2>Courses</h2>

{{#if courses.length}}
{{#each courses}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-image">
        <img src="{{img}}" alt="{{title}}">
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p class="price">{{price}}</p>
      </div>
      <div class="card-action app-navigation">
        <a href="/courses/{{_id}}" target="_blank">Open</a>
        {{!-- if user is Authorized show buttons: Edit, Bay --}}
        {{#if @root.isAuth}}
        <a href="/courses/{{_id}}/edit?allow=true">Edit</a>
        <form action="/card/add" method="POST">
          {{!-- csrf --}}
          <input type="hidden" name="_csrf" value="{{@root.csrf}}">
          <input type="hidden" name="id" value="{{_id}}">
          <button type="submit" class="btn btn-primary">Bay</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p>No data</p>
{{/if}}