<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a href="#register">Register</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{!-- login --}}

      {{#if loginError}}
          {{!-- if some value is invalid --}}
          <p class="alert">{{loginError}}</p>
      {{/if}}

      <h3>Enter to the shop</h3>
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input id="email" name="email" type="text" class="validate" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Write email"></span>
        </div>

        <div class="input-field">
          <input id="password" name="password" type="password" class="validate" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Write password"></span>
        </div>
        {{!-- csrf --}}
        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button type="submit" class="btn btn-primary">Enter</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{!-- Register --}}

      {{#if registerError}}
          {{!-- if some value is invalid --}}
          <p class="alert">{{registerError}}</p>
      {{/if}}

    <h3>Registration</h3>
      <form action="/auth/register" method="POST">
        <div class="input-field">
          <input id="rEmail" name="email" type="text" class="validate" required>
          <label for="rEmail">Email</label>
          <span class="helper-text" data-error="Write email"></span>
        </div>

        <div class="input-field">
          <input id="name" name="name" type="text" class="validate" required>
          <label for="name">Your name</label>
          <span class="helper-text" data-error="Write your name"></span>
        </div>

        <div class="input-field">
          <input id="rPassword" name="password" type="password" class="validate" required>
          <label for="rPassword">Password</label>
          <span class="helper-text" data-error="Write password"></span>
        </div>

        <div class="input-field">
          <input id="confirm" name="confirm" type="password" class="validate" required>
          <label for="confirm">Password</label>
          <span class="helper-text" data-error="Repeat your password"></span>
        </div>
        {{!-- csrf --}}
        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </div>
  </div>
</div>